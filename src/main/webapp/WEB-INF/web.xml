<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
			version="4.0">
	<context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/image_gallery?serverTimezone=UTC</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>tiwuser</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>TIWdatabase2022</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
  <welcome-file-list>
  	<welcome-file>login.html</welcome-file>
  </welcome-file-list>
  <filter>
  	<filter-name>LoginChecker</filter-name>
  	<filter-class>it.polimi.tiw.imagegallery.filters.LoginChecker</filter-class>
  </filter>
  <filter-mapping> 
    <filter-name>LoginChecker</filter-name> 
    <url-pattern>/AddToAlbum</url-pattern>
	  <url-pattern>/CreateAlbum</url-pattern>
	  <url-pattern>/FetchAlbum</url-pattern> 
		<url-pattern>/FetchAlbumList</url-pattern>
		<url-pattern>/FetchComments</url-pattern>
	  <url-pattern>/FetchImage</url-pattern>
		<url-pattern>/FetchImagesToAdd</url-pattern>
	  <url-pattern>/PublishComment</url-pattern>
	</filter-mapping>
</web-app>